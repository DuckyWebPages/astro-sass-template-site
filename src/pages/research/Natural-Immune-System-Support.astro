  <style>
    /* Intro */
    .intro-box{
      background:#f0f8ff; border-left:5px solid #004080; padding:1rem 1.25rem;
      margin-top:2rem; margin-bottom:1rem; border-radius:10px; line-height:1.6;
      box-shadow:0 2px 6px rgba(0,0,0,.08);
    }

    /* Stack container (replaces wide grid) */
    .stack { display:flex; flex-direction:column; gap:16px; }

    /* Collapsible cards */
    details.card,
    details.card.blue{
      border:1px solid #e6eef7; border-radius:12px; background:#fff;
      box-shadow:0 2px 10px rgba(0,0,0,.06); overflow:hidden;
    }
    details.card.blue{ background:#f0f8ff; border-left:6px solid #004080; }

    /* Summary bar */
    details.card > summary{
      list-style:none; cursor:pointer; padding:1rem 1.25rem;
      display:grid; gap:.35rem; align-items:start;
    }
    details.card > summary::-webkit-details-marker{ display:none; }

    details.card > summary h2{
      margin:0; color:#003366; font-size:1.2rem;
    }
    details.card > summary p{ margin:0; color:#333; }

    /* Chevron */
    details.card > summary::after{
      content:"▸"; justify-self:end; align-self:center; font-size:1.1rem; transition:transform .2s ease;
    }
    details.card[open] > summary::after{ transform:rotate(90deg); }

    /* Inner content */
    .collapse-body{
      padding:0 1.25rem 1rem 1.25rem; border-top:1px solid #e6eef7;
    }

    /* Lists */
    .bullets{ margin:.5rem 0 1rem 1.25rem; }
    .bullets li{ margin:.25rem 0; }

    /* Info/callouts */
    .info-box{
      border-left:6px solid #004080; background:#f0f8ff; padding:1rem 1.25rem;
      margin:1rem 0 .5rem 0; border-radius:10px; box-shadow:0 2px 10px rgba(0,0,0,.06);
    }
    .callout{
      border-left:4px solid #0a6; background:#f6fffa; padding:.75rem 1rem; margin-top:1rem;
    }
    .callout.alt{
      border-left-color:#6a2; background:#f7fff4;
    }
    .note{
      background:#fff; border:1px solid #e6eef7; border-radius:10px;
      padding:.75rem 1rem; margin-top:.75rem; display:inline-block;
    }
    .citation{ font-size:.95rem; color:#333; }

    /* Mobile tweaks */
    @media (max-width: 900px){
      details.card > summary{ padding:.85rem 1rem; }
      .collapse-body{ padding:0 1rem 1rem 1rem; }
    }
  </style>
</Layout>
