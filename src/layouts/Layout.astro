  nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    font-family: sans-serif;
    padding: 1rem 0;
    background-color: #003366; /* Deep blue */
    position: relative;
  }

  nav a {
    color: white;
    text-decoration: none;
    position: relative;
    font-weight: 500;
    padding: 0 0.5rem;
  }

  nav a:not(:last-child)::after {
    content: "|";
    color: white;
    margin-left: 0.5rem;
  }

  nav .dropdown {
    position: relative;
    display: inline-block;
  }

  nav .dropdown-content {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #003366;
    padding: 0.5rem;
    z-index: 1;
    flex-direction: column;
  }

  nav .dropdown:hover .dropdown-content {
    display: flex;
  }

  nav .dropdown-content a {
    padding: 0.25rem 0;
    color: white;
  }

  nav a:hover,
  nav .dropdown-content a:hover {
    text-decoration: underline;
  }
</style>

  </head>

