---
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <style>
      body {
        margin: 0;
        font-family: sans-serif;
      }

      nav {
        background-color: #003366;
        padding: 1rem;
        position: relative;
      }

      .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
      }

      .nav-links {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 0.75rem;
      }

      .nav-links a:hover {
        text-decoration: underline;
      }

      .dropdown-container {
        position: relative;
        display: inline-block;
      }

      .dropbtn {
        color: white;
        font-weight: 500;
        padding: 0.5rem 0.75rem;
        cursor: pointer;
        background: none;
      }

      .dropdown-menu {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #004080;
        min-width: 260px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.3);
        z-index: 1000;
        padding: 0;
        margin: 0;
      }

      .dropdown-menu a {
        display: block;
        color: white;
        padding: 12px 16px;
        text-decoration: none;
      }

      .dropdown-menu a:hover {
        background-color: #0059b3;
      }

      .dropdown-container:hover .dropdown-menu {
        display: block;
      }

      /* Mobile */
      .hamburger {
        display: none;
        flex-direction: column;
        cursor: pointer;
        gap: 5px;
      }

      .hamburger span {
        height: 3px;
        width: 25px;
        background: white;
      }

      .mobile-menu {
        display: none;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1rem;
      }

      .mobile-dropdown {
        display: none;
        flex-direction: column;
        background-color: #004080;
        margin-top: 0.5rem;
      }

      .mobile-dropdown a {
        padding: 10px 1rem;
        color: white;
        text-decoration: none;
      }

      @media (max-width: 768px) {
        .nav-links {
          display: none;
          flex-direction: column;
          width: 100%;
        }

        .nav-links.active {
          display: flex;
        }

        .hamburger {
          display: flex;
        }

        .mobile-dropdown-toggle:hover + .mobile-dropdown,
        .mobile-dropdown:hover {
          display: flex;
        }
      }
    </style>
    <script defer>
      function toggleMenu() {
        const navLinks = document.querySelector('.nav-links.mobile-menu');
        navLinks.classList.toggle('active');
      }

      function toggleMobileDropdown() {
        const dropdown = document.querySelector('.mobile-dropdown');
        dropdown.style.display = dropdown.style.display === 'flex' ? 'none' : 'flex';
      }
    </script>
  </head>

  <body>
    <header>
      <nav>
        <div class="nav-container">
          <div style="color: white; font-weight: bold;">A.R.A.I.</div>
          <div class="hamburger" onclick="toggleMenu()">
            <span></span>
            <span></span>
            <span></span>
          </div>
          <div class="nav-links">
            <a href="/">Home</a>
            <a href="/about">About</a>

            <!-- ✅ FIXED DROPDOWN -->
            <div class="dropdown-container">
  <a href="javascript:void(0);" class="dropbtn" onclick="toggleDropdown()">Research ▾</a>
  <div class="dropdown-menu" id="desktopDropdown">
    <a href="/research/Natural-Immune-System-Support">Natural Immune System Support</a>
    <a href="/research/Science-of-Flax-Hull-Lignans">Science of Flax Hull Lignans</a>
    <a href="/research/Vaccine-Detox-Research">Vaccine Detox Research</a>
    <a href="/research/Zeolite-Research">Zeolite Science</a>
    <a href="/research/Essential-Oil-Research">Essential Oil Research</a>
    <a href="/research/Enzyme-Research">Enzyme Research</a>
    <a href="/research/Longevity-Research">Longevity Research</a>
    <a href="/research/Cancer-Research">Cancer Research</a>
    <a href="/research/Detoxification-Research">Detoxification Research</a>
  </div>
</div>


            <a href="/supportothers">Health Help</a>
            <a href="/testimonials">Testimonials</a>
            <a href="/thirdworld">3rd World Help</a>
            <a href="/contact">Contact</a>
          </div>
        </div>

        <!-- Mobile Dropdown -->
        <div class="nav-links mobile-menu">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a class="mobile-dropdown-toggle" href="javascript:void(0);" onclick="toggleMobileDropdown()">Research ▾</a>
          <div class="mobile-dropdown">
            <a href="/research/Natural-Immune-System-Support">Natural Immune System Support</a>
            <a href="/research/Science-of-Flax-Hull-Lignans">Science of Flax Hull Lignans</a>
            <a href="/research/Vaccine-Detox-Research">Vaccine Detox Research</a>
            <a href="/research/Zeolite-Research">Zeolite Science</a>
            <a href="/research/Essential-Oil-Research">Essential Oil Research</a>
            <a href="/research/Enzyme-Research">Enzyme Research</a>
            <a href="/research/Longevity-Research">Longevity Research</a>
            <a href="/research/Cancer-Research">Cancer Research</a>
            <a href="/research/Detoxification-Research">Detoxification Research</a>
          </div>
          <a href="/supportothers">Health Help</a>
          <a href="/testimonials">Testimonials</a>
          <a href="/thirdworld">3rd World Help</a>
          <a href="/contact">Contact</a>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <hr />
      <p style="text-align: center;">© {new Date().getFullYear()} A.R.A.I.</p>
    </footer>
  </body>
</html>
<script>
  function toggleDropdown() {
    const menu = document.getElementById("desktopDropdown");
    menu.style.display = menu.style.display === "block" ? "none" : "block";
  }

  // Close dropdown when clicking outside
  document.addEventListener("click", function (event) {
    const menu = document.getElementById("desktopDropdown");
    const button = document.querySelector(".dropbtn");

    if (!menu.contains(event.target) && !button.contains(event.target)) {
      menu.style.display = "none";
    }
  });
</script>
